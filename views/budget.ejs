  <div class="row ">
    <div class="budget card col s12 m5 offset-m1">
      <div class="card-content">
        <h1>Budget</h1>
      <% budget.forEach( el=> { %>
      <ul data-id='<%=el._id%>'>
          <li >
            <span>Remaining:</span> <span> $ <%= (el.remainingAmount / 100).toFixed(2) %>
            </span>
          </li>
          <li class="">
            <span class=""> Initial: $ <%= (el.initialAmount / 100).toFixed(2) %>
            </span>
            <span class='del'> <i class="fa fa-trash "></i> </span>
          </li>
      </ul>
    <% }) %>
    <div class="divider"></div>
    <div class="card-content">
      <p>
        Enter Monthly Budget
      </p>
      <form action="/budget/create" method='POST'>
        <label>Amount<input type="number" step="0.01" placeholder="Enter additional budget" name='initialAmount'></label>
        <input class='btn green darken-2' type="submit" value="Submit" value="Add to Budget">
      </form>
    </div>
      </div>
      
    </div>

    <div class="expenses card col s12 m5 offset-m1">
      <div class="card-content">
        <h1>Expenses</h1>
        <% expenses.forEach( el=> { %>
          <li class='todoItem' data-id='<%=el._id%>'>
            <p>
              <%= (el.amount / 100).toFixed(2) %>
              <%= el.description %>
            </p>
            <button class="updExpense">edit</button>
            <dialog id="updateExpenseDialog">
              <form method="dialog">
                <label for="newAmount"> new amount</label>
                <input id="newAmount"  type="number" step="0.01">
                <label for="newDescription"> new description</label>
                <input id="newDescription" type="text">
                <button>Cancel</button>
                <button id="saveNewAmountBtn">Save</button>
              </form>
            </dialog>
            <span class='delExpense'> <i class="fa fa-trash"></i> </span>
          </li>
          <% }) %>
      </ul>

      <form action="/expenses/create" method='POST'>
        <label>Amount
          <input type="number" step="0.01" placeholder="Amount" name='amount'>
        </label>
        <label> Description
          <input type="text" id="description" name="description">
        </label>
        <input type="submit" value="Add Expense">
      </form>
      </div>
      </div>
      
      
    </div>
  </div>
